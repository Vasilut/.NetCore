@model CoreApp.ViewModels.HomePageViewModel

@{ 
    ViewBag.Title = "Home Page";
}

<h1>Welcome</h1>
<table>

    @foreach (var item in Model.Restaurants)
    {
        <tr>
            <td>
                @*<a href="/home/details/@item.Id">Details</a>*@
                @Html.ActionLink("View", "Details", new { Id = item.Id })
            </td>
            <td>@item.Name</td>
        </tr>
    }
</table>

@section footer{
    <h3>@Model.CurrentMessage</h3>
}